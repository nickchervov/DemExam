<Page x:Class="demExVar1.Pages.logInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:demExVar1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="logInPage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
        <DockPanel Margin="0,0,0,10">
            <TextBlock Text="Логин:" MinWidth="60"/>
            <TextBox x:Name="tbLogin"/>
        </DockPanel>
        <DockPanel Margin="0,0,0,10">
            <TextBlock Text="Пароль:" MinWidth="60"/>
            <PasswordBox x:Name="pbPassword"/>
        </DockPanel>
        <StackPanel  HorizontalAlignment="Center">
            <Button x:Name="btnLogIn" Content="Войти" Click="btnLogIn_Click"/>
            <TextBlock Text="или" HorizontalAlignment="Center" Margin="5"/>
            <Button x:Name="btnLogInGuest" Content="Войти как гость" MinWidth="140" Click="btnLogInGuest_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
