      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid Background="White">

        <StackPanel HorizontalAlignment="Center"   VerticalAlignment="Center" >
            <Button x:Name="PRODUCTW"  Content="Товары" Margin="10" Padding="15" Background="#FF4DA6FF" FontSize="22" Click="Product_click" />
            <Button Content="Учетные записи" Margin="10" Padding="15" Background="#FF4DA6FF" FontSize="22" Click="Users_click" />
            <Button Content="Корзины" Margin="10" Padding="15" Background="#FF4DA6FF" FontSize="22" Click="Baskets_click" />
        </StackPanel>

    </Grid>
</Page>
